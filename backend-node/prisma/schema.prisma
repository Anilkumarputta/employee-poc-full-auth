generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int             @id @default(autoincrement())
  email         String          @unique
  passwordHash  String
  role          String          @default("employee") // "director", "manager", "employee"
  provider      String?         // "local" or "google"
  providerId    String?         // e.g., google sub
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  refreshTokens RefreshToken[]
}

model RefreshToken {
  id        Int      @id @default(autoincrement())
  token     String   @unique
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  expiresAt DateTime
  revoked   Boolean  @default(false)
}

model Employee {
  id                Int            @id @default(autoincrement())
  name              String
  email             String?        @unique
  userId            Int?           @unique
  age               Int
  className         String
  subjects          String[]
  attendance        Int
  role              String         // "director", "manager", "employee"
  status            String         // "ACTIVE", "UNDER_REVIEW", "FLAGGED", "TERMINATION_REQUESTED", "TERMINATED"
  location          String
  lastLogin         String
  flagged           Boolean        @default(false)
  avatar            String?
  managerId         Int?
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt
  notesReceived     Note[]         @relation("EmployeeNotes")
  leaveRequests     LeaveRequest[]
  reviewRequests    ReviewRequest[]
}

model Note {
  id          Int      @id @default(autoincrement())
  message     String
  fromUserId  Int
  toEmployeeId Int?
  toAll       Boolean  @default(false)
  isRead      Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  employee    Employee? @relation("EmployeeNotes", fields: [toEmployeeId], references: [id], onDelete: Cascade)
}

model Message {
  id              Int       @id @default(autoincrement())
  conversationId  String    // Groups related messages together
  senderId        Int       // User ID who sent the message
  senderEmail     String
  senderRole      String    // "director", "manager", "employee"
  recipientId     Int?      // Specific recipient User ID (null for broadcast)
  recipientEmail  String?
  recipientRole   String?   // Filter by role for broadcast
  subject         String?   // Optional subject line
  message         String
  messageType     String    @default("direct") // "direct", "broadcast", "reply"
  isRead          Boolean   @default(false)
  readAt          DateTime?
  priority        String    @default("normal") // "normal", "high", "urgent"
  replyToId       Int?      // Reference to parent message for threading
  attachments     String[]  @default([]) // File URLs if needed
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}

model Notification {
  id          Int       @id @default(autoincrement())
  userId      Int       // Recipient user ID
  userEmail   String
  title       String
  message     String
  type        String    @default("INFO") // "INFO", "WARNING", "CRITICAL", "MESSAGE", "APPROVAL"
  isRead      Boolean   @default(false)
  readAt      DateTime?
  actionUrl   String?   // Link to relevant page
  linkTo      String?   // Internal app route
  metadata    Json?     // Additional data (message ID, sender info, etc.)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Thread {
  id                Int       @id @default(autoincrement())
  participants      Int[]     // Array of User IDs
  linkedEmployeeId  Int?      // Link to employee if discussion is about them
  linkedRequestId   Int?      // Link to ReviewRequest if applicable
  title             String?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  messages          ThreadMessage[]
}

model ThreadMessage {
  id          Int       @id @default(autoincrement())
  threadId    Int
  senderId    Int       // User ID or 0 for SYSTEM
  senderEmail String
  senderRole  String
  body        String
  type        String    @default("USER") // "USER" or "SYSTEM"
  createdAt   DateTime  @default(now())
  thread      Thread    @relation(fields: [threadId], references: [id], onDelete: Cascade)
}

model ReviewRequest {
  id                    Int       @id @default(autoincrement())
  employeeId            Int
  requestedByManagerId  Int       // User ID of the manager
  requestedByEmail      String
  type                  String    // "FLAG" or "TERMINATE"
  status                String    @default("PENDING") // "PENDING", "APPROVED", "REJECTED"
  managerReasonType     String    // "Performance", "Behaviour", "Attendance", "Policy Violation", "Other"
  managerReasonText     String
  visibleToEmployee     Boolean   @default(false)
  adminComment          String?
  reviewedByAdminId     Int?      // User ID of admin who reviewed
  reviewedAt            DateTime?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
  employee              Employee  @relation(fields: [employeeId], references: [id], onDelete: Cascade)
  threadId              Int?      // Link to discussion thread
}

model LeaveRequest {
  id          Int      @id @default(autoincrement())
  employeeId  Int
  reason      String
  startDate   String
  endDate     String
  status      String   @default("pending") // pending, approved, rejected
  adminNote   String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  employee    Employee @relation(fields: [employeeId], references: [id], onDelete: Cascade)
}

model AccessLog {
  id        Int      @id @default(autoincrement())
  userId    Int
  userEmail String
  action    String
  details   String?
  ipAddress String?
  createdAt DateTime @default(now())
}
